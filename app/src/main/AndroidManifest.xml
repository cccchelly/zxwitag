<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.alex.witAg"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:name="com.alex.witAg.App"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.alex.witAg.ui.activity.SplashActivity"
                  android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
                <!--<category android:name="android.intent.category.HOME"/>-->
                <!--<category android:name="android.intent.category.DEFAULT"/>-->
            </intent-filter>
        </activity>

        <activity android:name="com.alex.witAg.ui.activity.MainActivity"
                  android:screenOrientation="landscape"/>
        <activity android:name="com.alex.witAg.ui.activity.LoginActivity"
                  android:screenOrientation="landscape"/>

        <receiver android:name=".utils.BootReceiver"
            android:exported="true"
            android:enabled="true"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED">
            <intent-filter>
                <!--注册开机广播地址-->
                <action android:name="android.intent.action.BOOT_COMPLETED"/>

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

    </application>

</manifest>