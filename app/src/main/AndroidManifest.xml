        <service android:name=".service.CaptureService">
            <intent-filter>
                <action android:name="capture" />
            </intent-filter>
        </service>
        <service android:name=".service.PostPicService">
            <intent-filter>
                <action android:name="postpic" />
            </intent-filter>
        </service>
        <service android:name=".service.UpdateService">
            <intent-filter>
                <action android:name="update"/>
            </intent-filter>
        </service>

        <receiver android:name=".receiver.UpdateReStartReceiver">
            <intent-filter>
                <action android:name="install_and_start"/>
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED"/>
                <action android:name="android.intent.action.PACKAGE_REPLACED"/>
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <action android:name="android.intent.action.PACKAGE_REMOVED" />
                <data android:scheme="package"/>

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <activity android:name=".ui.activity.ShowPicActivity"
            android:launchMode="singleTop"/>
        <activity android:name=".ui.activity.TaskSettingActivity"
            android:launchMode="singleTop"/>
        <activity android:name=".ui.activity.SetAccountActivity"
            android:launchMode="singleTop"/>
        <activity android:name=".ui.activity.BindPhoneActivity"
            android:launchMode="singleTop"/>
        <activity android:name=".ui.activity.ResetActivity"
            android:launchMode="singleTop"/>
        <activity android:name=".ui.activity.SetIpActivity"
            android:launchMode="singleTop"/>
        <activity android:name=".ui.activity.SetCompanyUrlActivity"
            android:launchMode="singleTop"/>
        <activity android:name=".ui.activity.BindCompanyActivity"
            android:launchMode="singleTop"></activity>
    </application>

