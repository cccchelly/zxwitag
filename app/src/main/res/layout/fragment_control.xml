<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <EditText
        android:visibility="gone"
        android:id="@+id/et_serial_info"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:gravity="center"
        android:hint="请输入串口信息"
        android:maxLines="1"
        android:singleLine="true"
        android:background="@drawable/shape_et_search"/>

    <LinearLayout
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/tv_rise"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawablePadding="@dimen/dp_5"
            android:drawableTop="@drawable/ic_rise"
            android:text="上升"
            android:textColor="@color/text_4d4d4d"
            android:textSize="@dimen/sp_16"/>

        <TextView
            android:id="@+id/tv_decline"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawablePadding="@dimen/dp_5"
            android:drawableTop="@drawable/ic_decline"
            android:text="下降"
            android:textColor="@color/text_4d4d4d"
            android:textSize="@dimen/sp_16"/>

        <TextView
            android:id="@+id/tv_take_photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_5"
            android:drawableTop="@drawable/ic_take_photo"
            android:gravity="center"
            android:text="拍照"
            android:textColor="@color/text_4d4d4d"
            android:textSize="@dimen/sp_16"/>

        <TextView
            android:id="@+id/ic_reset"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawablePadding="@dimen/dp_5"
            android:drawableTop="@drawable/ic_reset"
            android:text="复位"
            android:textColor="@color/text_4d4d4d"
            android:textSize="@dimen/sp_16"/>
    </LinearLayout>
    <!--选择串口，需求变更为初始打开相应串口-->
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_serial"
        android:textColor="@color/white"
        android:background="@color/main_color"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="选择串口"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_20"/>
</LinearLayout>