<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_250">

        <LinearLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_5"
            android:background="@drawable/selector_shape_data_item_bg_conner"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="@dimen/dp_10"
                android:src="@drawable/capture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="夜间拍摄"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/text_4d4d4d"/>

            <TextView
                android:id="@+id/data_tv_dark_capture_status"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/text_4d4d4d"/>

            <com.alex.witAg.view.EaseSwitchButton
                android:layout_marginBottom="@dimen/dp_10"
                android:id="@+id/sb_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:background="@drawable/selector_shape_data_item_bg_conner"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="@dimen/dp_10"
                android:src="@drawable/battrayvol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电池电压"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/text_4d4d4d"/>

            <TextView
                android:id="@+id/data_tv_batvol_status"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/text_4d4d4d"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:background="@drawable/selector_shape_data_item_bg_conner"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="@dimen/dp_10"
                android:src="@drawable/sunvol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="太阳能电压"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/text_4d4d4d"/>

            <TextView
                android:id="@+id/data_tv_sunvvol_status"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/text_4d4d4d"/>

        </LinearLayout>

        <LinearLayout
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
            android:background="@drawable/selector_shape_data_item_bg_conner"
        android:gravity="center_horizontal"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="@dimen/dp_10"
            android:src="@drawable/dianjiban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电机状态"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_4d4d4d"/>

        <TextView
            android:id="@+id/data_tv_dianji_status"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="状态"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_4d4d4d"/>

    </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:background="@drawable/selector_shape_data_item_bg_conner"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="@dimen/dp_10"
                android:src="@drawable/ic_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天气"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/text_4d4d4d"/>
            <TextView
                android:layout_marginTop="@dimen/dp_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/text_4d4d4d"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:text="湿度"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/text_4d4d4d"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="状态"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/text_4d4d4d"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/selector_shape_data_item_bg_conner"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="@dimen/dp_10"
                android:src="@drawable/ic_gps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GPS"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/text_4d4d4d"/>

            <TextView
                android:layout_marginTop="@dimen/dp_40"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/text_4d4d4d"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_warning">

        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center"
            android:drawablePadding="@dimen/dp_5"
            android:drawableLeft="@drawable/ic_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="警告信息"
            android:textColor="@color/text_4d4d4d"/>

        <TextView
            android:id="@+id/tv_warning"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/sp_12"
            android:text="暂无信息"
            android:textColor="@color/text_4d4d4d"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        
        <TextView
            android:id="@+id/tv_examine"
            android:layout_marginRight="@dimen/dp_10"
            android:text="查看"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:background="#29aae1"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_30"/>
    </LinearLayout>
</LinearLayout>