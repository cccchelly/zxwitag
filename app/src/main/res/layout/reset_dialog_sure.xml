<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="@dimen/dp_16"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/sp_14"
        android:text="确定恢复出厂设置？"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_14"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/set_reset_secend_tv_sure"
            android:layout_width="@dimen/dp_108"
            android:layout_height="@dimen/dp_21"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            android:background="@drawable/selector_about_us_text_bg"
            android:layout_marginRight="@dimen/dp_20"
            android:text="确定"/>
        <TextView
            android:id="@+id/set_reset_secend_tv_cancle"
            android:layout_width="@dimen/dp_108"
            android:layout_height="@dimen/dp_21"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:background="@drawable/selector_shape_grey_bg_conner"
            android:text="取消"/>
    </LinearLayout>
</LinearLayout>