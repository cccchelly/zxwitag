<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_margin="@dimen/dp_14">

    <FrameLayout
        android:layout_width="@dimen/dp_176"
        android:layout_height="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/selector_edt_grey_storke_conner">
        <EditText
            android:id="@+id/bind_phone_edt_input_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_12"
            android:inputType="number"
            android:maxLines="1"
            android:hint="请输入手机号"
            android:background="@null"
            />
    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_30"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="@dimen/dp_99"
            android:layout_height="@dimen/dp_20"
            android:background="@drawable/selector_edt_grey_storke_conner">
            <EditText
                android:id="@+id/bind_phone_edt_input_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_12"
                android:hint="请输入验证码"
                android:maxLines="1"
                android:background="@null"
                />
        </FrameLayout>
        <TextView
            android:id="@+id/bind_phone_tv_send_code"
            android:layout_width="@dimen/dp_68"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/main_color"
            android:gravity="center"
            android:paddingTop="@dimen/dp_3"
            android:paddingBottom="@dimen/dp_3"
            android:background="@drawable/selector_shape_green_conner_storke"
            android:text="发送验证码"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_14"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/bind_phone_tv_sure"
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_21"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            android:background="@drawable/selector_about_us_text_bg"
            android:layout_marginRight="@dimen/dp_10"
            android:text="确定"/>
        <TextView
            android:id="@+id/bind_phone_tv_cancle"
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_21"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:background="@drawable/selector_shape_grey_bg_conner"
            android:text="取消"/>
    </LinearLayout>
</LinearLayout>